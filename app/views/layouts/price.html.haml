  %body
    - if flash[:notice]
      .content.clearfix.text-center
        %div{ class: "alert alert-primary", role: "alert", style: "margin-bottom: 0rem;" }
          = flash[:notice]
    - if flash[:error]
      .content.clearfix.text-center
        %div{ class: "alert alert-danger", role: "alert", style: "margin-bottom: 0rem;" }
          = flash[:error]

    // - if price_signed_in?
    .wrapper.reveal-side-navigation{style: "background-image: linear-gradient(125deg, #32325d 0%, #6162b5 100%) !important;"}
