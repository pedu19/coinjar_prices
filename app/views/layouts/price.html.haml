%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %meta{content: "", name: "description"}/

    %title= "#{ yield :title } | price"
 
    = yield :css_head
    = yield :js_head
    = csrf_meta_tag
    = stylesheet_link_tag 'price', media: 'all', 'data-turbolinks-track': 'reload'
   
